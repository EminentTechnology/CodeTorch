<?xml version="1.0" encoding="utf-8"?>
<Screen xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Name>Confirmation.aspx</Name>
  <PageTemplate>
    <Mode>Static</Mode>
    <Name>App</Name>
  </PageTemplate>
  <Type>Screen</Type>
  <Folder>Apply</Folder>
  <RequireAuthentication>true</RequireAuthentication>
  <SupportsTransactions>true</SupportsTransactions>
  <ValidateRequest>true</ValidateRequest>
  <Menu>
    <DisplayMenu>false</DisplayMenu>
  </Menu>
  <Title>
    <UseCommand>true</UseCommand>
    <CommandFormatString>{PageTitle}</CommandFormatString>
    <CommandName>Worker_GetJobTitle</CommandName>
  </Title>
  <SubTitle>
    <UseCommand>false</UseCommand>
  </SubTitle>
  <ScreenPermission>
    <CheckPermission>false</CheckPermission>
  </ScreenPermission>
  <Sections>
    <Section xsi:type="AlertSection">
      <Name>Alert</Name>
      <Type>Alert</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Top</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <IncludeValidationSummary>false</IncludeValidationSummary>
    </Section>
    <Section xsi:type="ContentSection">
      <ID>ContentSection</ID>
      <Name>Content</Name>
      <Type>Content</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Left</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Content>
        &lt;div class="ui-bg-overlay bg-dark opacity-25"&gt;&lt;/div&gt;
        &lt;div class="authentication-inner py-5"&gt;

            &lt;div class="card"&gt;
                &lt;div class="p-4 p-sm-5"&gt;

                    &lt;div class="display-1 lnr lnr-checkmark-circle text-center text-success mb-4"&gt;&lt;/div&gt;

                    &lt;p class="text-center text-big mb-4"&gt;Thanks for Submitting your Job Application!&lt;/p&gt;

                    &lt;div class="alert alert-success text-center"&gt;
                        &lt;p&gt;Just sit back, relax while we notify the employer of your application.&lt;/p&gt;

                        &lt;p&gt;If they are interested or have any questions regarding your application will send you a message soon.&lt;/p&gt;
                    &lt;/div&gt;

                &lt;/div&gt;
                &lt;div class="card-footer py-3 px-4 px-sm-5"&gt;
                    &lt;div class="text-center text-muted"&gt;

                        &lt;a href="../Jobs/MyJobs" runat="server"&gt;View your jobs&lt;/a&gt;
                    &lt;/div&gt;
                &lt;/div&gt;
            &lt;/div&gt;


        &lt;/div&gt;

</Content>
    </Section>
  </Sections>
  <SectionZoneLayout>SingleColumn</SectionZoneLayout>
  <SectionZoneLayoutMode>Static</SectionZoneLayoutMode>
  <Settings />
  <Scripts />
  <DataCommands>
     <DataCommand>
      <Name>Worker_GetJobTitle</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@JobGuid</Name>
          <InputType>QueryString</InputType>
          <InputKey>JobGuid</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
  </DataCommands>
  <OnPageLoad>
    <Commands />
  </OnPageLoad>
  <OnPageInit>
    <Commands>
      <RenderPageSectionsCommand>
        <Name>RenderPageSections</Name>
        <Type>RenderPageSectionsCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <EntityInputType>QueryString</EntityInputType>
        <Mode>Simple</Mode>
      </RenderPageSectionsCommand>
    </Commands>
  </OnPageInit>
</Screen>