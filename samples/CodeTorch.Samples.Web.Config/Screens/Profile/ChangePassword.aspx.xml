<?xml version="1.0" encoding="utf-8"?>
<Screen xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Name>ChangePassword.aspx</Name>
  <PageTemplate>
    <Mode>Static</Mode>
    <Name>App</Name>
  </PageTemplate>
  <Type>Screen</Type>
  <Folder>Profile</Folder>
  <RequireAuthentication>true</RequireAuthentication>
  <SupportsTransactions>true</SupportsTransactions>
  <ValidateRequest>true</ValidateRequest>
  <Menu>
    <DisplayMenu>false</DisplayMenu>
  </Menu>
  <Title>
    <Name>My Profile</Name>
    <UseCommand>false</UseCommand>
  </Title>
  <SubTitle>
    <UseCommand>false</UseCommand>
  </SubTitle>
  <ScreenPermission>
    <CheckPermission>false</CheckPermission>
  </ScreenPermission>
  <Sections>
    <Section xsi:type="AlertSection">
      <Name>Alert</Name>
      <Type>Alert</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Top</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <IncludeValidationSummary>true</IncludeValidationSummary>
    </Section>
    <Section xsi:type="ContentSection">
      <Name>TitleArea</Name>
      <Type>Content</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Top</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Content>&lt;h4 class="font-weight-bold py-3 mb-4"&gt;Change Password &lt;/h4&gt;</Content>
    </Section>
    <Section xsi:type="EditSection">
      <Name>Details</Name>
      <Type>Edit</Type>
      <Mode>All</Mode>
      <ContainerMode>Plain</ContainerMode>
      <Visible>true</Visible>
      <ContainerElement>fieldset</ContainerElement>
      <ContainerCssClass>form-horizontal</ContainerCssClass>
      <ContentPane>Content</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets>
        <Widget xsi:type="PasswordControl">
          <Name>OldPassword</Name>
          <ControlContainerElement>div</ControlContainerElement>
          <ControlContainerCssClass>col-sm-10</ControlContainerCssClass>
          <Label>Current Password</Label>
          <LabelCssClass>col-form-label col-sm-2 text-sm-right</LabelCssClass>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <ControlGroupElement>div</ControlGroupElement>
          <ControlGroupCssClass>form-group row mb-5</ControlGroupCssClass>
          <HelpTextElement>span</HelpTextElement>
          <HelpTextCssClass>help-block</HelpTextCssClass>
          <Type>Password</Type>
          <IsRequired>true</IsRequired>
          <Visible>true</Visible>
          <DataField>OldPassword</DataField>
          <Width>100%</Width>
          <Validators />
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <PasswordAlgorithm>SaltHashProvider</PasswordAlgorithm>
          <PasswordMode>PlainText</PasswordMode>
        </Widget>
        <Widget xsi:type="PasswordControl">
          <Name>NewPassword</Name>
          <ControlContainerElement>div</ControlContainerElement>
          <ControlContainerCssClass>col-sm-10</ControlContainerCssClass>
          <Label>New Password</Label>
          <LabelCssClass>col-form-label col-sm-2 text-sm-right</LabelCssClass>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <LabelContainerCssClass />
          <ControlGroupElement>div</ControlGroupElement>
          <ControlGroupCssClass>form-group row</ControlGroupCssClass>
          <HelpText>Your new password must have a minimum of 8 characters and contain at least 1 lowercase, 1 uppercase and 1 number.</HelpText>
          <HelpTextElement>span</HelpTextElement>
          <HelpTextCssClass>help-block</HelpTextCssClass>
          <Type>Password</Type>
          <IsRequired>true</IsRequired>
          <Visible>true</Visible>
          <DataField>NewPassword</DataField>
          <Width>100%</Width>
          <Validators>
            <RegularExpressionValidator>
              <Name>NewPasswordRegularExpressionValidator</Name>
              <ErrorMessage>Password must be at least 8 characters long and contain 1 upper, lower and 1 number.</ErrorMessage>
              <ValidationExpression>^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[$@$!%*?&amp;])[A-Za-z\d$@$!%*?&amp;]{8,}</ValidationExpression>
            </RegularExpressionValidator>
          </Validators>
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <PasswordAlgorithm>SaltHashProvider</PasswordAlgorithm>
          <PasswordMode>Hash</PasswordMode>
        </Widget>
        <Widget xsi:type="PasswordControl">
          <Name>ConfirmPassword</Name>
          <ControlContainerElement>div</ControlContainerElement>
          <ControlContainerCssClass>col-sm-10</ControlContainerCssClass>
          <Label>Confirm Password</Label>
          <LabelCssClass>col-form-label col-sm-2 text-sm-right</LabelCssClass>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <ControlGroupElement>div</ControlGroupElement>
          <ControlGroupCssClass>form-group row</ControlGroupCssClass>
          <HelpTextElement>span</HelpTextElement>
          <HelpTextCssClass>help-block</HelpTextCssClass>
          <Type>Password</Type>
          <IsRequired>true</IsRequired>
          <Visible>true</Visible>
          <DataField>Password</DataField>
          <Width>100%</Width>
          <Validators>
            <CompareValidator>
              <Name>ConfirmPasswordCompareValidator</Name>
              <ErrorMessage>Both passwords must match</ErrorMessage>
              <Type>String</Type>
              <Operator>Equal</Operator>
              <ControlToCompare>NewPassword</ControlToCompare>
            </CompareValidator>
          </Validators>
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <PasswordAlgorithm>SaltHashProvider</PasswordAlgorithm>
          <PasswordMode>PlainText</PasswordMode>
        </Widget>
      </Widgets>
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
    </Section>
    <Section xsi:type="ButtonListSection">
      <Name>Buttons</Name>
      <CssClass>text-center</CssClass>
      <Type>ButtonList</Type>
      <Mode>All</Mode>
      <ContainerMode>Plain</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Bottom</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Buttons>
        <Button>
          <Name>Save</Name>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <Type>Button</Type>
          <IsRequired>false</IsRequired>
          <Visible>true</Visible>
          <CssClass>btn btn-primary</CssClass>
          <Validators />
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <Text>Save</Text>
          <CausesValidation>true</CausesValidation>
          <OnClick>
            <Commands>
              <InsertUpdateSaveCommand>
                <Name>SaveCommand</Name>
                <Type>InsertUpdateSaveCommand</Type>
                <ContinueOnError>false</ContinueOnError>
                <EntityID>ProfileId</EntityID>
                <EntityInputType>User</EntityInputType>
                <UpdateCommand>Profile_UpdatePassword</UpdateCommand>
                <AfterInsertConfirmationMessage>Record was added successfully</AfterInsertConfirmationMessage>
                <AfterUpdateConfirmationMessage>Record was updated successfully</AfterUpdateConfirmationMessage>
                <RedirectAfterInsert>true</RedirectAfterInsert>
                <RedirectAfterUpdate>true</RedirectAfterUpdate>
                <AfterUpdateRedirectUrl>~/App/Profile/Overview</AfterUpdateRedirectUrl>
              </InsertUpdateSaveCommand>
            </Commands>
          </OnClick>
        </Button>
        <Button>
          <Name>Cancel</Name>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <Type>Button</Type>
          <IsRequired>false</IsRequired>
          <Visible>true</Visible>
          <CssClass>btn btn-default</CssClass>
          <Validators />
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <Text>Cancel</Text>
          <CausesValidation>false</CausesValidation>
          <OnClick>
            <Commands>
              <NavigateToUrlCommand>
                <Name>NavigateOnCancel</Name>
                <Type>NavigateToUrlCommand</Type>
                <ContinueOnError>false</ContinueOnError>
                <NavigateUrl>~/App/Profile/Overview</NavigateUrl>
                <EntityID>Id</EntityID>
              </NavigateToUrlCommand>
            </Commands>
          </OnClick>
        </Button>
      </Buttons>
    </Section>
  </Sections>
  <SectionZoneLayout>SingleColumnNoActions</SectionZoneLayout>
  <SectionZoneLayoutMode>Static</SectionZoneLayoutMode>
  <Settings />
  <Scripts />
  <DataCommands>
    <DataCommand>
      <Name>Profile_GetById</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
    <DataCommand>
      <Name>Profile_UpdatePassword</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@Persona</Name>
          <InputType>Constant</InputType>
          <InputKey>1</InputKey>
        </Parameter>
        <Parameter>
          <Name>@OldPassword</Name>
          <InputType>Control</InputType>
          <InputKey>OldPassword</InputKey>
        </Parameter>
        <Parameter>
          <Name>@NewPassword</Name>
          <InputType>Control</InputType>
          <InputKey>NewPassword</InputKey>
        </Parameter>
        <Parameter>
          <Name>@ModifiedBy</Name>
          <InputType>User</InputType>
          <InputKey>EmailAddress</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
  </DataCommands>
  <OnPageLoad>
    <Commands>
      <DefaultOrPopulateScreenCommand>
        <Name>DefaultOrPopulateScreen</Name>
        <Type>DefaultOrPopulateScreenCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <EntityID>ProfileId</EntityID>
        <EntityInputType>User</EntityInputType>
        <RetrieveCommand>Profile_GetById</RetrieveCommand>
        <ExecuteOnPostBack>false</ExecuteOnPostBack>
      </DefaultOrPopulateScreenCommand>
    </Commands>
  </OnPageLoad>
  <OnPageInit>
    <Commands>
      <RenderPageSectionsCommand>
        <Name>RenderPageSections</Name>
        <Type>RenderPageSectionsCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <EntityID>ProfileId</EntityID>
        <EntityInputType>User</EntityInputType>
        <Mode>InsertEdit</Mode>
      </RenderPageSectionsCommand>
    </Commands>
  </OnPageInit>
</Screen>