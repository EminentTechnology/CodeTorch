<?xml version="1.0" encoding="utf-8"?>
<Screen xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Name>Cancel.aspx</Name>
  <PageTemplate>
    <Mode>Static</Mode>
    <Name>App</Name>
  </PageTemplate>
  <Type>Screen</Type>
  <Folder>Shifts</Folder>
  <RequireAuthentication>true</RequireAuthentication>
  <SupportsTransactions>true</SupportsTransactions>
  <ValidateRequest>true</ValidateRequest>
  <Menu>
    <Name />
    <DisplayMenu>false</DisplayMenu>
  </Menu>
  <Title>
    <UseCommand>true</UseCommand>
    <CommandFormatString>{PageTitle}</CommandFormatString>
    <FormattedCommandFormatString>{FormattedPageTitle}</FormattedCommandFormatString>
    <CommandName>Employer_GetShiftTitle</CommandName>
  </Title>
  <SubTitle>
    <UseCommand>false</UseCommand>
  </SubTitle>
  <ScreenPermission>
    <CheckPermission>false</CheckPermission>
  </ScreenPermission>
  <Sections>
    <Section xsi:type="AlertSection">
      <Name>Alert</Name>
      <Type>Alert</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Top</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <IncludeValidationSummary>true</IncludeValidationSummary>
    </Section>
    <Section xsi:type="ContentSection">
      <Name>ShiftTitle</Name>
      <Type>Content</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Top</ContentPane>
      <SelectDataCommand>Employer_GetShiftTitle</SelectDataCommand>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Content>&lt;h4 class="font-weight-bold py-3 mb-4"&gt;{SubTitle}&lt;/h4&gt;</Content>
    </Section>
    <Section xsi:type="ContentSection">
      <Name>WarningText</Name>
      <Type>Content</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Content</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Content>&lt;div class="alert alert-dark-warning "&gt;
Warning: You are about to cancel this shift.&lt;br/&gt;Canceling a shift is an irreversible action. &lt;br/&gt;&lt;br/&gt;NOTE - If you have a booking for to this shift you will not be able to cancel this shift until you remove the shift from the booking.
&lt;/div&gt;</Content>
    </Section>
    <Section xsi:type="ButtonListSection">
      <Name>Buttons</Name>
      <CssClass>text-center</CssClass>
      <Type>ButtonList</Type>
      <Mode>All</Mode>
      <ContainerMode>Plain</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Content</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Buttons>
        <Button>
          <Name>Save</Name>
          <RenderLabel>true</RenderLabel>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <Type>Button</Type>
          <IsRequired>false</IsRequired>
          <Visible>true</Visible>
          <CssClass>btn btn-primary</CssClass>
          <Validators />
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <Text>I want to CANCEL this Shift</Text>
          <OnClientClick>return confirm("WARNING: Do you want to cancel this job?\r\n\r\nPress OK to cancel this SHIFT\r\nPress CANCEL to leave this shift alone.");</OnClientClick>
          <CausesValidation>true</CausesValidation>
          <OnClick>
            <Commands>
              <InsertUpdateSaveCommand>
                <Name>SaveCommand</Name>
                <Type>InsertUpdateSaveCommand</Type>
                <ContinueOnError>false</ContinueOnError>
                <EntityID>JobId</EntityID>
                <EntityInputType>QueryString</EntityInputType>
                <UpdateCommand>Employer_CancelShift</UpdateCommand>
                <AfterInsertConfirmationMessage>Record was added successfully</AfterInsertConfirmationMessage>
                <AfterUpdateConfirmationMessage>Record was updated successfully</AfterUpdateConfirmationMessage>
                <RedirectAfterInsert>true</RedirectAfterInsert>
                <RedirectAfterUpdate>true</RedirectAfterUpdate>
                <AfterUpdateRedirectUrl>~/App/Jobs/Shifts</AfterUpdateRedirectUrl>
                <AfterUpdateRedirectUrlContext>JobId</AfterUpdateRedirectUrlContext>
              </InsertUpdateSaveCommand>
            </Commands>
          </OnClick>
        </Button>
        <Button>
          <Name>Cancel</Name>
          <RenderLabel>true</RenderLabel>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <Type>Button</Type>
          <IsRequired>false</IsRequired>
          <Visible>true</Visible>
          <CssClass>btn btn-default</CssClass>
          <Validators />
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <Text>Go back to Shift Details</Text>
          <CausesValidation>false</CausesValidation>
          <OnClick>
            <Commands>
              <NavigateToUrlCommand>
                <Name>NavigateOnCancel</Name>
                <Type>NavigateToUrlCommand</Type>
                <ContinueOnError>false</ContinueOnError>
                <NavigateUrl>~/App/Shifts/Edit</NavigateUrl>
                <Context>JobId,ShiftId</Context>
                <EntityID>ShiftId</EntityID>
              </NavigateToUrlCommand>
            </Commands>
          </OnClick>
        </Button>
      </Buttons>
    </Section>
  </Sections>
  <SectionZoneLayout>SingleColumnNoActions</SectionZoneLayout>
  <SectionZoneLayoutMode>Static</SectionZoneLayoutMode>
  <Settings />
  <Scripts />
  <DataCommands>
    <DataCommand>
      <Name>Employer_GetShiftTitle</Name>
      <Parameters>
        <Parameter>
          <Name>@EmployerId</Name>
          <InputType>User</InputType>
          <InputKey>EmployerId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@ShiftId</Name>
          <InputType>QueryString</InputType>
          <InputKey>ShiftId</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
    <DataCommand>
      <Name>Employer_CancelShift</Name>
      <Parameters>
        <Parameter>
          <Name>@EmployerId</Name>
          <InputType>User</InputType>
          <InputKey>EmployerId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@ShiftId</Name>
          <InputType>QueryString</InputType>
          <InputKey>ShiftId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@ModifiedBy</Name>
          <InputType>User</InputType>
          <InputKey>EmailAddress</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
  </DataCommands>
  <OnPageLoad>
    <Commands>
      <DefaultOrPopulateScreenCommand>
        <Name>DefaultOrPopulateScreen</Name>
        <Type>DefaultOrPopulateScreenCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <EntityID>JobId</EntityID>
        <EntityInputType>QueryString</EntityInputType>
        <ExecuteOnPostBack>false</ExecuteOnPostBack>
      </DefaultOrPopulateScreenCommand>
    </Commands>
  </OnPageLoad>
  <OnPageInit>
    <Commands>
      <RenderPageSectionsCommand>
        <Name>RenderPageSections</Name>
        <Type>RenderPageSectionsCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <EntityID>JobId</EntityID>
        <EntityInputType>QueryString</EntityInputType>
        <Mode>InsertEdit</Mode>
      </RenderPageSectionsCommand>
      <ExecuteDataCommand>
        <Name>RequireShiftId</Name>
        <Type>ExecuteDataCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <DataCommand>Shift_RequireShiftId</DataCommand>
      </ExecuteDataCommand>
    </Commands>
  </OnPageInit>
</Screen>