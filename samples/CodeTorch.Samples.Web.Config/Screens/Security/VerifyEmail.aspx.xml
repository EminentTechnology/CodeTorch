<?xml version="1.0" encoding="utf-8"?>
<Screen xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Name>VerifyEmail.aspx</Name>
  <PageTemplate>
    <Mode>Static</Mode>
    <Name>Signup</Name>
  </PageTemplate>
  <Type>Screen</Type>
  <Folder>Security</Folder>
  <RequireAuthentication>false</RequireAuthentication>
  <SupportsTransactions>true</SupportsTransactions>
  <ValidateRequest>true</ValidateRequest>
  <Menu>
    <DisplayMenu>false</DisplayMenu>
  </Menu>
  <Title>
    <UseCommand>false</UseCommand>
  </Title>
  <SubTitle>
    <UseCommand>false</UseCommand>
  </SubTitle>
  <ScreenPermission>
    <CheckPermission>false</CheckPermission>
  </ScreenPermission>
  <Sections />
  <Settings />
  <Scripts />
  <DataCommands>
    <DataCommand>
      <Name>Profile_VerifyEmail</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>QueryString</InputType>
          <InputKey>PID</InputKey>
        </Parameter>
        <Parameter>
          <Name>@EmailAddress</Name>
          <InputType>Special</InputType>
          <InputKey>Null</InputKey>
        </Parameter>
        <Parameter>
          <Name>@EmailVerificationCode</Name>
          <InputType>QueryString</InputType>
          <InputKey>ActivationId</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
  </DataCommands>
  <OnPageLoad>
    <Commands>
      <RedirectCommand>
        <Name>Redirect</Name>
        <Type>RedirectCommand</Type>
        <DataCommand>Profile_VerifyEmail</DataCommand>
        <RedirectUrl>~/App/Security/VerifyEmailSuccess.aspx</RedirectUrl>
        <OnErrorRedirectUrl>~/App/Security/VerifyEmailFailed.aspx</OnErrorRedirectUrl>
        <RedirectMode>Constant</RedirectMode>
      </RedirectCommand>
    </Commands>
  </OnPageLoad>
  <OnPageInit>
    <Commands />
  </OnPageInit>
</Screen>