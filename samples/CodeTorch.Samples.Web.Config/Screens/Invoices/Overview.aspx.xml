<?xml version="1.0" encoding="utf-8"?>
<Screen xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Name>Overview.aspx</Name>
  <PageTemplate>
    <Mode>Static</Mode>
    <Name>App</Name>
  </PageTemplate>
  <Type>Screen</Type>
  <Folder>Invoices</Folder>
  <RequireAuthentication>true</RequireAuthentication>
  <SupportsTransactions>true</SupportsTransactions>
  <ValidateRequest>true</ValidateRequest>
  <Menu>
    <DisplayMenu>false</DisplayMenu>
  </Menu>
  <Title>
    <Name>Invoice</Name>
    <UseCommand>true</UseCommand>
    <CommandFormatString>{PageTitle}</CommandFormatString>
    <FormattedCommandFormatString>{FormattedPageTitle}</FormattedCommandFormatString>
    <CommandName>Worker_GetInvoiceTitle</CommandName>
  </Title>
  <SubTitle>
    <UseCommand>false</UseCommand>
  </SubTitle>
  <ScreenPermission>
    <CheckPermission>false</CheckPermission>
  </ScreenPermission>
  <Sections>
    <Section xsi:type="AlertSection">
      <Name>Alert</Name>
      <Type>Alert</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Top</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <IncludeValidationSummary>false</IncludeValidationSummary>
    </Section>
    <Section xsi:type="ContentSection">
      <ID>ContentSection</ID>
      <Name>Content</Name>
      <Type>Content</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Content</ContentPane>
      <SelectDataCommand>Worker_GetInvoiceDetails</SelectDataCommand>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Content>&lt;div class="row"&gt;
                  &lt;div class="col-sm-6 pb-4"&gt;

                    &lt;div class="media align-items-center mb-4"&gt;
        
                      &lt;div class="media-body text-big font-weight-bold "&gt;
                        {InvoiceFromCompanyName}
                      &lt;/div&gt;
                    &lt;/div&gt;

                    &lt;div class="mb-1"&gt;{InvoiceFromAddressLine1}, {InvoiceFromAddressLine2}&lt;/div&gt;
                    &lt;div class="mb-1"&gt;{InvoiceFromCity}, {InvoiceFromStateId} {InvoiceFromPostalCode}, {InvoiceFromCountryId}&lt;/div&gt;
                    &lt;div&gt;&lt;/div&gt;

                  &lt;/div&gt;

                  &lt;div class="col-sm-6 text-right pb-4"&gt;

                    &lt;h6 class="text-big text-large font-weight-bold mb-3"&gt;INVOICE #{InvoiceId}&lt;/h6&gt;
                    &lt;div class="mb-1"&gt;Date:
                      &lt;strong class="font-weight-semibold"&gt;{FormattedInvoiceDate}&lt;/strong&gt;
                    &lt;/div&gt;
                    &lt;div&gt;Due date:
                      &lt;strong class="font-weight-semibold"&gt;{FormattedDueDate}&lt;/strong&gt;
                    &lt;/div&gt;

                  &lt;/div&gt;
                &lt;/div&gt;

                &lt;hr class="mb-4"&gt;

                &lt;div class="row"&gt;
                  &lt;div class="col-sm-6 mb-4"&gt;

                    &lt;div class="font-weight-bold mb-2"&gt;Invoice To:&lt;/div&gt;
                    &lt;div&gt;{InvoiceToContactName}&lt;/div&gt;
                    &lt;div&gt;{InvoiceToCompanyName}&lt;/div&gt;
                    &lt;div&gt;{InvoiceToAddressLine1}, {InvoiceToAddressLine2}&lt;/div&gt;
                    &lt;div&gt;{InvoiceToCity}, {InvoiceToStateId} {InvoiceToPostalCode}, {InvoiceToCountryId}&lt;/div&gt;
                    

                  &lt;/div&gt;
                  &lt;div class="col-sm-6 mb-4"&gt;

                    &lt;div class="font-weight-bold mb-2"&gt;Payment Details:&lt;/div&gt;
                    &lt;table&gt;
                      &lt;tbody&gt;
                          &lt;tr&gt;
                          &lt;td class="pr-3"&gt;Payment Status:&lt;/td&gt;
                          &lt;td&gt;{PaymentStatusName}&lt;/td&gt;
                        &lt;/tr&gt;
                        &lt;tr&gt;
                          &lt;td class="pr-3"&gt;Total Due:&lt;/td&gt;
                          &lt;td&gt;
                            {FormattedTotal}
                          &lt;/td&gt;
                        &lt;/tr&gt;
                        &lt;tr&gt;
                          &lt;td class="pr-3"&gt;Paid Amount:&lt;/td&gt;
                          &lt;td&gt;
                            {FormattedAmountPaid}
                          &lt;/td&gt;
                        &lt;/tr&gt;
                         &lt;tr&gt;
                          &lt;td class="pr-3"&gt;Balance:&lt;/td&gt;
                          &lt;td&gt;
                            &lt;strong&gt;{FormattedBalanceDue}&lt;/strong&gt;
                          &lt;/td&gt;
                        &lt;/tr&gt;
                        
                        
                      &lt;/tbody&gt;
                    &lt;/table&gt;
                  &lt;/div&gt;
                &lt;/div&gt;

                &lt;div class="table-responsive mb-4"&gt;
                  &lt;table class="table m-0"&gt;
                    &lt;thead&gt;
                      &lt;tr&gt;
                        &lt;th class="py-3"&gt;
                          Item Details
                        &lt;/th&gt;
                        &lt;th class="py-3"&gt;
                          Rate
                        &lt;/th&gt;
                        &lt;th class="py-3"&gt;
                          Qty
                        &lt;/th&gt;
                        &lt;th class="py-3"&gt;
                          Line total
                        &lt;/th&gt;
                      &lt;/tr&gt;
                    &lt;/thead&gt;
                    &lt;tbody&gt;
                     
                        {ItemsHtml}
                      &lt;tr&gt;
                        &lt;td colspan="3" class="text-right py-3"&gt;
       
                          &lt;span class="d-block text-big mt-2"&gt;Total:&lt;/span&gt;
                        &lt;/td&gt;
                        &lt;td class="py-3"&gt;
                          &lt;strong class="d-block text-big mt-2"&gt;{FormattedTotal}&lt;/strong&gt;
                        &lt;/td&gt;
                      &lt;/tr&gt;
                    &lt;/tbody&gt;
                  &lt;/table&gt;
                &lt;/div&gt;</Content>
    </Section>
    <Section xsi:type="ContentSection">
      <Name>Actions</Name>
      <Type>Content</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Side</ContentPane>
      <SelectDataCommand>Worker_GetInvoiceActions</SelectDataCommand>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Content>{ActionsHtml}</Content>
    </Section>
  </Sections>
  <SectionZoneLayout>SingleColumnActions</SectionZoneLayout>
  <SectionZoneLayoutMode>Static</SectionZoneLayoutMode>
  <Settings />
  <Scripts />
  <DataCommands>
    <DataCommand>
      <Name>Worker_GetInvoiceDetails</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@InvoiceId</Name>
          <InputType>QueryString</InputType>
          <InputKey>InvoiceId</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
    <DataCommand>
      <Name>Worker_GetInvoiceActions</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@InvoiceId</Name>
          <InputType>QueryString</InputType>
          <InputKey>InvoiceId</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
    <DataCommand>
      <Name>Worker_GetInvoiceTitle</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@InvoiceId</Name>
          <InputType>QueryString</InputType>
          <InputKey>InvoiceId</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
  </DataCommands>
  <OnPageLoad>
    <Commands />
  </OnPageLoad>
  <OnPageInit>
    <Commands>
      <RenderPageSectionsCommand>
        <Name>RenderPageSections</Name>
        <Type>RenderPageSectionsCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <EntityInputType>QueryString</EntityInputType>
        <Mode>Simple</Mode>
      </RenderPageSectionsCommand>
    </Commands>
  </OnPageInit>
</Screen>