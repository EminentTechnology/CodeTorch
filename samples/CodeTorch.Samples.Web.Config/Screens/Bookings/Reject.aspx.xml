<?xml version="1.0" encoding="utf-8"?>
<Screen xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <Name>Reject.aspx</Name>
  <PageTemplate>
    <Mode>Static</Mode>
    <Name>AppWithMenu</Name>
  </PageTemplate>
  <Type>Screen</Type>
  <Folder>Bookings</Folder>
  <RequireAuthentication>true</RequireAuthentication>
  <SupportsTransactions>true</SupportsTransactions>
  <ValidateRequest>true</ValidateRequest>
  <Menu>
    <Name />
    <DisplayMenu>false</DisplayMenu>
  </Menu>
  <Title>
    <UseCommand>true</UseCommand>
    <CommandFormatString>{PageTitle}</CommandFormatString>
    <FormattedCommandFormatString>{FormattedPageTitle}</FormattedCommandFormatString>
    <CommandName>Worker_GetBookingTitle</CommandName>
  </Title>
  <SubTitle>
    <UseCommand>true</UseCommand>
    <CommandFormatString>{SubTitle}</CommandFormatString>
    <FormattedCommandFormatString>{FormattedSubTitle}</FormattedCommandFormatString>
    <CommandName>Worker_GetBookingTitle</CommandName>
  </SubTitle>
  <ScreenPermission>
    <CheckPermission>false</CheckPermission>
  </ScreenPermission>
  <Sections>
    <Section xsi:type="AlertSection">
      <Name>Alert</Name>
      <Type>Alert</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Top</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <IncludeValidationSummary>true</IncludeValidationSummary>
    </Section>
    <Section xsi:type="ContentSection">
      <Name>TitleSection</Name>
      <Type>Content</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Top</ContentPane>
      <SelectDataCommand>Worker_GetBookingById</SelectDataCommand>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Content>&lt;h4 class="font-weight-bold py-3 mb-4"&gt;Reject Booking {BookingId}&lt;/h4&gt;</Content>
    </Section>
    <Section xsi:type="ContentSection">
      <Name>WarningText</Name>
      <Type>Content</Type>
      <Mode>All</Mode>
      <ContainerMode>None</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Content</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Content>
        &lt;div class="alert alert-dark-warning "&gt;
        Warning: You are about to reject this booking.&lt;br/&gt;Rejecting a booking is an irreversible action. &lt;br/&gt;&lt;br/&gt;NOTE - Please communicate with your employer before rejecting this booking. Oftentimes you might be able to resolve issues with the booking by speaking with your employer about the specific issue - eg availability, rates, etc. 
        &lt;/div&gt;
      </Content>
    </Section>
    <Section xsi:type="EditSection">
      <Name>Details</Name>
      <Type>Edit</Type>
      <Mode>All</Mode>
      <ContainerMode>Plain</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Content</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets>
        <Widget xsi:type="TextAreaControl">
          <Name>Reason</Name>
          <RenderLabel>true</RenderLabel>
          <ControlContainerElement>div</ControlContainerElement>
          <ControlContainerCssClass>col</ControlContainerCssClass>
          <Label>Reason</Label>
          <LabelCssClass>col-md-4</LabelCssClass>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <LabelContainerElement />
          <LabelContainerCssClass />
          <ControlGroupElement>div</ControlGroupElement>
          <ControlGroupCssClass>form-group</ControlGroupCssClass>
          <HelpTextElement>span</HelpTextElement>
          <HelpTextCssClass>help-block</HelpTextCssClass>
          <Type>TextArea</Type>
          <IsRequired>true</IsRequired>
          <Visible>true</Visible>
          <Width>100%</Width>
          <Validators />
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <Rows>5</Rows>
          <Columns>20</Columns>
        </Widget>
      </Widgets>
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
    </Section>
    <Section xsi:type="ButtonListSection">
      <Name>Buttons</Name>
      <CssClass>text-center</CssClass>
      <Type>ButtonList</Type>
      <Mode>All</Mode>
      <ContainerMode>Plain</ContainerMode>
      <Visible>true</Visible>
      <ContentPane>Content</ContentPane>
      <Permission>
        <CheckPermission>false</CheckPermission>
      </Permission>
      <Widgets />
      <AfterPopulateSection>
        <Commands />
      </AfterPopulateSection>
      <Buttons>
        <Button>
          <Name>Save</Name>
          <RenderLabel>true</RenderLabel>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <Type>Button</Type>
          <IsRequired>false</IsRequired>
          <Visible>true</Visible>
          <CssClass>btn btn-primary</CssClass>
          <Validators />
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <Text>I want to REJECT this booking</Text>
          <OnClientClick>return confirm("WARNING: Do you want to reject this booking?\r\n\r\nPress OK to reject this BOOKING\r\nPress CANCEL to leave this booking alone.");</OnClientClick>
          <CausesValidation>true</CausesValidation>
          <OnClick>
            <Commands>
              <InsertUpdateSaveCommand>
                <Name>SaveCommand</Name>
                <Type>InsertUpdateSaveCommand</Type>
                <ContinueOnError>false</ContinueOnError>
                <EntityID>BookingId</EntityID>
                <EntityInputType>QueryString</EntityInputType>
                <UpdateCommand>Worker_CancelBooking</UpdateCommand>
                <AfterInsertConfirmationMessage>Record was added successfully</AfterInsertConfirmationMessage>
                <AfterUpdateConfirmationMessage>Record was updated successfully</AfterUpdateConfirmationMessage>
                <RedirectAfterInsert>true</RedirectAfterInsert>
                <RedirectAfterUpdate>true</RedirectAfterUpdate>
                <AfterUpdateRedirectUrl>~/App/Bookings/Overview</AfterUpdateRedirectUrl>
                <AfterUpdateRedirectUrlContext>BookingId</AfterUpdateRedirectUrlContext>
              </InsertUpdateSaveCommand>
            </Commands>
          </OnClick>
        </Button>
        <Button>
          <Name>Cancel</Name>
          <RenderLabel>true</RenderLabel>
          <LabelWrapsControl>false</LabelWrapsControl>
          <LabelRendersBeforeControl>true</LabelRendersBeforeControl>
          <Type>Button</Type>
          <IsRequired>false</IsRequired>
          <Visible>true</Visible>
          <CssClass>btn btn-default</CssClass>
          <Validators />
          <VisiblePermission>
            <CheckPermission>false</CheckPermission>
          </VisiblePermission>
          <EditPermission>
            <CheckPermission>false</CheckPermission>
          </EditPermission>
          <Text>Go back to Booking Overview</Text>
          <CausesValidation>false</CausesValidation>
          <OnClick>
            <Commands>
              <NavigateToUrlCommand>
                <Name>NavigateOnCancel</Name>
                <Type>NavigateToUrlCommand</Type>
                <ContinueOnError>false</ContinueOnError>
                <NavigateUrl>~/App/Bookings/Overview</NavigateUrl>
                <Context>BookingId</Context>
                <EntityID>BookingId</EntityID>
              </NavigateToUrlCommand>
            </Commands>
          </OnClick>
        </Button>
      </Buttons>
    </Section>
  </Sections>
  <SectionZoneLayout>SingleColumnNoActions</SectionZoneLayout>
  <SectionZoneLayoutMode>Static</SectionZoneLayoutMode>
  <Settings />
  <Scripts />
  <DataCommands>
    <DataCommand>
      <Name>Worker_GetBookingTitle</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@BookingId</Name>
          <InputType>QueryString</InputType>
          <InputKey>BookingId</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
    <DataCommand>
      <Name>Worker_GetBookingById</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@BookingId</Name>
          <InputType>QueryString</InputType>
          <InputKey>BookingId</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
    <DataCommand>
      <Name>Worker_CancelBooking</Name>
      <Parameters>
        <Parameter>
          <Name>@ProfileId</Name>
          <InputType>User</InputType>
          <InputKey>ProfileId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@BookingId</Name>
          <InputType>QueryString</InputType>
          <InputKey>BookingId</InputKey>
        </Parameter>
        <Parameter>
          <Name>@Mode</Name>
          <InputType>Constant</InputType>
          <InputKey>1</InputKey>
        </Parameter>
        <Parameter>
          <Name>@Reason</Name>
          <InputType>Control</InputType>
          <InputKey>Reason</InputKey>
        </Parameter>
        <Parameter>
          <Name>@ModifiedBy</Name>
          <InputType>User</InputType>
          <InputKey>EmailAddress</InputKey>
        </Parameter>
      </Parameters>
    </DataCommand>
  </DataCommands>
  <OnPageLoad>
    <Commands>
      <DefaultOrPopulateScreenCommand>
        <Name>DefaultOrPopulateScreen</Name>
        <Type>DefaultOrPopulateScreenCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <EntityID>BookingId</EntityID>
        <EntityInputType>QueryString</EntityInputType>
        <ExecuteOnPostBack>false</ExecuteOnPostBack>
      </DefaultOrPopulateScreenCommand>
    </Commands>
  </OnPageLoad>
  <OnPageInit>
    <Commands>
      <ExecuteDataCommand>
        <Name>RequireBookingId</Name>
        <Type>ExecuteDataCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <DataCommand>Booking_RequireBookingId</DataCommand>
      </ExecuteDataCommand>
      <RenderPageSectionsCommand>
        <Name>RenderPageSections</Name>
        <Type>RenderPageSectionsCommand</Type>
        <ContinueOnError>false</ContinueOnError>
        <EntityID>BookingId</EntityID>
        <EntityInputType>QueryString</EntityInputType>
        <Mode>InsertEdit</Mode>
      </RenderPageSectionsCommand>
    </Commands>
  </OnPageInit>
</Screen>